<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/guest/head'); %>
  <body class="hold-transition login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="/"><b>WA</b>Engine</a>
      </div>
      <!-- /.login-logo -->
      <div class="card">
        <div class="card-body login-card-body">
          <p class="login-box-msg">Sign in to start your session</p>
          <form action="/authlogin" method="post">
            <div class="input-group mb-3">
              <select class="custom-select" id="server" name="server">
                <option selected>--- Pilih ---</option>
                <% data.forEach(server => { %>
                <option value="<%= server.Url %> "><%= server.Server %></option>
                <% }) %>
              </select>
            </div>
            <div class="input-group mb-3">
              <input
                type="email"
                class="form-control"
                placeholder="Email"
                id="email"
                name="email"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <div class="input-group mb-3">
              <input
                type="password"
                class="form-control"
                placeholder="Password"
                id="password"
                name="password"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">
                  Sign In
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../partials/guest/script'); %>
  </body>
</html>
